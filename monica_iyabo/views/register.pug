doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous")
    link(rel="stylesheet" href="/style.css")
    script(src="/validation.js")
    title Ministry of Health
  body
    .container
      .row
        .col
        .col   
            div
              
            form( name="register"  action="/register" method="POST" onsubmit="return registerValid()")
              //- action="/register" method="POST"
              img(src="/images/form-header-image.png" alt="")
              p Ministry of health
              h1 COVID-19(CORONA VIRUS)
              P Virus-Test Registration Form
              .form-row
                .col
                  label(for="") Surname
                  input.form-control(type="text" name="surname" )
                  span#errorsName
                .col
                  label(for="") Givenname
                  input.form-control(type="text" name="givenname")
                  span#errorgName
              .form-row
                .col
                  label(for="") Date of birth
                  input.form-control(type="date" name="dob")
                  span#errorDob
                .col
                  label(for="") Place of residence
                  input.form-control(type="text" name="residence")
                  span#errorResidence
              .form-row
                .col
                  label(for="") Occupation
                  input.form-control(type="text" name="occupation")
                  span#errorOccupation
                .col
                  label(for="") Nationality
                  input.form-control(type="text" name="nationality")
                  span#errorNationality
              fieldset.form-group
                .row
                  legend.col-form-label.col-sm-2.pt-0 Gender
                  .col
                    .form-check
                      input#gridRadios1.form-check-input(type="radio" name="gender" value="male" checked="")
                      label.form-check-label(for="gridRadios1")
                        | Male
                    .form-check
                      input#gridRadios2.form-check-input(type="radio" name="gender" value="female")
                      label.form-check-label(for="gridRadios2")
                        | Female
                    span#errorCheck
                  .col
                    label Category:
                    select.name(name="category")
                            option( value="Returnee") Returnee
                            option( value="Contact") Contact 
                            option( value="Alert") Alert
                            option( value="Volunteer") Volunteer
                    span#errorCat

              .col-auto
                button.btn.btn-primary(type="submit") Submit
    .col


      
