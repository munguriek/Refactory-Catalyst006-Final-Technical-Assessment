meta(charset="utf-8")
meta(name="viewport", content="width=device-width,initial-scale=1,shrink-to-fit=no")
title Virus-Test Registration form
link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css", integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2", crossorigin="anonymous")
link(href="../css/form-validation.css", rel="stylesheet")
.container.tableborder
  .py-5.text-center
    img.d-block.mx-auto.mb-4(src="../images/form-header-image.png", alt)
    h2 Ministry of Health
    h3.lead
      strong COVID-19 (CORONA VIRUS)
    h4.mb-3 Virus-Test Registration Form
  form(name="registration", onsubmit="formreg()", action="/covidregistration", method="POST" )
    .row
      .col-md-6.mb-3
        label(for="surname") Surname
        input.form-control#surname(type="text",  name="surname")
        span#surnamenerror
      .col-md-6.mb-3
        label(for="givenname") Given name
        input.form-control#givename(type="text", name="givenname" )
        span#givennerror
    .row
      .col-md-6.mb-3
        label(for="dob") Date of Birth
        input.form-control#dob(type="date", name="dob",min="2019-11-20", max ="20100-11-20")
        span#doberror
      .col-md-6.mb-3
        label(for="place") Place of Residence
        input.form-control#place(type="text",  name="place")
        span#placeerror
    .row
      .col-md-6.mb-3
        label(for="occupation") Occupation
        input.form-control#occupation(type="text", placeholder, name="occupation")
        span#occupationerror
      .col-md-6.mb-3
        label(for="nationality") Nationality
        input.form-control#nationality(type="text", placeholder, name="nationality")
        span#nationalityerror
    .mb-3
      label(for="username") Gender
      hr
      input( checked type="radio",id="man" name="gender", value="male")
      |  Male

      input(type="radio", id="woman" name="gender", value="female")
      |  Female
      br
      span#gendererror
    .row.categoryy
      .col-md-12.mb-3
        label(for="Category") Category
        select.custom-select.d-block.w-100(name="category")
          option(value="") ...Select Category.....
          option(value="Returnee") Returnee
          option(value="Contact") Contact
          option(value="Alert") Alert
          option(value="Volunteer") Volunteer
        span#categoryerror
    button.btn.btn-primary(type="submit") Register
script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js", integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj", crossorigin="anonymous")
script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js", integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN", crossorigin="anonymous")
script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js", integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s", crossorigin="anonymous")
script(src="../js/form-validation.js")