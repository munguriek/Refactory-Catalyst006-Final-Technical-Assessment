doctype html
html(lang="en")
    head
        title Virus-Test Registration Form
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
        link(rel="stylesheet", href="/css/bootstrap.css")
        link(rel="stylesheet", href="/css/reg.css")
    body
        div.container
            .justify-content-center
                .row
                    .col-md-12
                    img(src="/images/form-header-image.png", alt="moh header" width="500px")
                    
                .row
                    p  Ministry Of Health
                .row
                    h2  COVID-19 (CORONA VIRUS)
                .row
                    p  Virus-Test Registration Form
                .row
                    form(action="/registrationform" method="POST" name="regform" onsubmit="return validateForm()")
                        div.row 
                            div.form-group.col-6
                                label Surname
                                input.form-control(type="text" name="surname")
                                span#snameError
                            div.form-group.col-6
                                label Given name
                                input.form-control(type="text" name="givenname")
                                span#gnameError
                        div.row
                            div.form-group.col-6
                                label Date of Birth
                                input.form-control(type="date" name="dob")
                                span#dobError
                            div.form-group.col-6
                                label Place of Residence
                                input.form-control(type="text" name="residence")
                                span#resiError
                        div.row 
                            div.form-group.col-6
                                label Occupation
                                input.form-control(type="text" name="occupation")
                                span#occError
                            div.form-group.col-6
                                label Nationality
                                input.form-control(type="text" name="nationality")
                                span#natError
                        div.row
                            div.form-group.col-12
                                label Gender&nbsp;
                                br
                                hr
                                input(type="radio" name="gen" value="Male") 
                                |   Male&nbsp;
                                input(type="radio" name="gen" value="Female") 
                                |   Female&nbsp;
                                span#genError
                        div.row 
                            div.form-group.col-12
                                label Category
                                select.form-control(name="category")
                                    option#opt(value="--Select Category--") --Select Category --
                                    option#opt(value="Returnee") Returnee
                                    option#opt(value="Contact") Contact
                                    option#opt(value="Alert") Alert
                                    option#opt(value="Volunteer") Volunteer
                                    span#catError
                        div.row 
                        input.btn.btn-info(type="submit" value="Register")
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script> 
            script(src="js/bootsrap.js") 
            script(src="js/validation.js")  
            