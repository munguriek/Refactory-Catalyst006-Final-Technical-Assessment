      if users.length
          each user in users
            tr
              td #{user.surname}
              td #{user.givenname}
              td #{user.dateofbirth}
              td #{user.placeofresidence}
              td #{user.occupation}
              td #{user.nationality} 
              td #{user.gender}
              td #{user.category} 
