      .card-title.breadcrumb PRODUCTS LIST
    table.table.table-bordered
      thead.thead-light
        tr
            th Surname
            th Payment Mode
            th Delivery Mode
            th Produce Type
            th Directions
            th Products Availability
            th Products Image
            th UserID No
            th
