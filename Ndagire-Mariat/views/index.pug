doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous")
        title Virus Test Registration Form
    body
        .container.card
            img(src="images/form-header-image.png" )
            div.text-dark
                div.text-center
                    h5 Ministry Of Health
                    h2 COVID-19(CORONA VIRUS)
                    h4 Virus-Test Registration Form
                form(id="regform" onsubmit="validate()" method="POST" action="/index" )
                    .form-row
                        .form-group.col-md-6
                            label(for="surname") Surname
                            input#surname.form-control(type="text" name="surname" )
                            span#serr
                        .form-group.col-md-6
                            label(for="givenname") Given Name
                            input#givenname.form-control(type="text" name="givenname" required)
                            span#gerr

                    .form-row
                        .form-group.col-md-6
                            label(for="dob") Date Of Birth
                            input#dob.form-control(type="date" name="DateOfBirth" required)
                            span#doberr
                        .form-group.col-md-6
                            label(for="place") Place Of Residence 
                            input#place.form-control(type="text" name="placeOfResidence" required)
                            span#placeerr
                    .form-row
                        .form-group.col-md-6
                            label(for="occupation") Occupation
                            input#occupation.form-control(type="text" name="occupation" required)
                            span#occuerr
                        .form-group.col-md-6
                            label(for="nation") Nationality
                            input#nation.form-control(type="text" name="nationality" required)
                            span#naterr
                    label Gender
                    hr
                    .form-row
                        .form-group.col-md-6
                            .form-check.form-check-inline
                                input.form-check-input#male(type="radio" name="gender" value="Male" checked)
                                label.form-check-label(for="male") Male
                                
                        .form-group.col-md-6
                            input.form-check-input#female(type="radio" name="gender" value="Male")
                            label.form-check-label(for="female") Female
                            
                    .form-group
                        label(for="category") Category
                        select#category.form-control(name="category")
                            option(selected='') Select Patient Category
                            option Alert
                            option Returnee
                            option Contact
                            option Alert
                            option Volunteer
                        span#caterr

                    button.btn.btn-primary.float-right(type="submit") Register
    script(src="js/validation.js")
   




                    


